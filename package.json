{
  "name": "wdiopracticaltask",
  "version": "1.0.0",
  "description": "Trello web BDD scenarios",
  "type": "module",
  "scripts": {
    "code:eslint": "eslint \"**/*.{js,json}\" --fix",
    "code:format": "prettier --check \"**/**/*.{js,json}*\" --write",
    "eslint:prettier": "eslint \"**/*.{js,json}\" --fix && prettier --check \"**/**/*.{js,json}*\" --write",
    "test:ui": "wdio run src/configs/wdio.conf.js",
    "test:api": "newman run api_tests/Trello_API_Collection.json -e api_tests/Trello_API_Environment.json",
    "precommit": "run-s format:fix lint",
    "format:fix": "pretty-quick --staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run code:eslint",
      "npm run code:format",
      "git add"
    ]
  },
  "author": "Tinatin Abuladze",
  "license": "UNLICENSED",
  "devDependencies": {
    "@wdio/cli": "^8.39.1",
    "@wdio/firefox-profile-service": "^8.39.0",
    "@wdio/local-runner": "^8.39.1",
    "@wdio/mocha-framework": "^8.39.0",
    "@wdio/spec-reporter": "^8.39.0",
    "chai": "^5.1.1",
    "chromedriver": "^128.0.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "geckodriver": "^4.4.2",
    "newman": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-geckodriver-service": "^5.0.2"
  },
  "dependencies": {
    "@eslint/js": "^9.9.1"
  }
}
